<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mascota1"
            android:layout_marginBottom="10dp"/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgMegusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hueso_del_perro_50"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"/>


            <TextView
                android:id="@+id/tvNombreMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre mascota"
                android:textSize="20dp"
                android:layout_marginLeft="45sp"/>

            <TextView
                android:id="@+id/tvCantLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/imgCantLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hueso_del_perro_48"
                android:layout_gravity="right"
                android:layout_marginRight="38dp"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>